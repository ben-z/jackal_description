    <plugin name="" filename="">
      <alwaysOn>true</alwaysOn>
      <updateRate>100.0</updateRate>
      <leftJoint>left_wheel_jnt</leftJoint>
      <rightJoint>right_wheel_jnt</rightJoint>
      <wheelSeparation>${axle}</wheelSeparation>
      <wheelDiameter>${wheel_radius*2}</wheelDiameter>
      <torque>35</torque> 
    </plugin>
  </gazebo> -->
</robot>
